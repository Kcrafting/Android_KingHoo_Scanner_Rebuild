<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
       
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="26pt"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0pt"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/acticity_setting_server_software_version_label"
                android:textSize="22dp"
                android:gravity="center_vertical|right"
            />
            <Spinner
                     android:id="@+id/activity_setting_server_software_version_select"
                android:layout_width="0pt"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textAlignment="center"/>
               

            <!--<EditText
                android:layout_width="0pt"
                android:layout_height="match_parent"
            android:layout_weight="2"/>-->
        </LinearLayout>
             <View
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="0.5dp"
        android:background="#444"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="26pt"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0pt"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/acticity_setting_serverip_label"
                android:textSize="30dp"
                android:gravity="center_vertical|right"
            />
            <AutoCompleteTextView
                android:id="@+id/activity_setting_server_ip"
                android:layout_width="0pt"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:completionHint="192.168.1.88"
                android:textAlignment="center"
            />
            <!--<EditText
                android:layout_width="0pt"
                android:layout_height="match_parent"
            android:layout_weight="2"/>-->
        </LinearLayout>
        <View
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="0.5dp"
        android:background="#444"/>
            <TextView
                android:text="@string/acticity_setting_serverip_label_description"
                android:textSize="10dp"
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                 android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_height="wrap_content"/>
            <View
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="0.5dp"
        android:background="#444"/>


            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="26pt"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0pt"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/acticity_setting_userName_label"
                android:textSize="30dp"
                android:gravity="center_vertical|right"
            />
            <EditText
                android:id="@+id/acticity_setting_userName"
                android:layout_width="0pt"
                android:layout_height="match_parent"
                android:textAlignment="center"
            android:layout_weight="2"/>
        </LinearLayout>
        <View
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="0.5dp"
        android:background="#444"/>
             <TextView
                android:text="@string/acticity_setting_userName_label_description"
                android:textSize="10dp"
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                 android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_height="wrap_content"/>
            <View
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="0.5dp"
        android:background="#444"/>
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="26pt"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0pt"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/acticity_setting_userpassword_label"
               android:textSize="30dp"
                android:gravity="center_vertical|right"
            />
            <EditText
                android:id="@+id/acticity_setting_userpassword"
                android:layout_width="0pt"
                android:layout_height="match_parent"
                android:textAlignment="center"           android:inputType="textPassword"
            android:layout_weight="2"/>
        </LinearLayout>
        <View
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="0.5dp"
        android:background="#444"/>
            <TextView
                android:text="@string/acticity_setting_userpassword_label_description"
                android:textSize="10dp"
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                 android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_height="wrap_content"/>
            <View
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="0.5dp"
        android:background="#444"/>
                    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="26pt"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0pt"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/acticity_setting_port_label"
               android:textSize="30dp"
                android:gravity="center_vertical|right"
            />
            <EditText
                android:id="@+id/acticity_setting_port"
                android:layout_width="0pt"
                android:layout_height="match_parent"
                android:textAlignment="center"           android:inputType="number"
            android:layout_weight="2"/>
        </LinearLayout>
        <View
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="0.5dp"
        android:background="#444"/>
                        <TextView
                android:text="@string/acticity_setting_port_label_description"
                android:textSize="10dp"
                 android:color="#DDDDDD"
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                 android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_height="wrap_content"/>
            <View
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="0.5dp"
        android:background="#444"/>
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="26pt"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0pt"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/acticity_setting_database_label"
                android:textSize="30dp"
                android:gravity="center_vertical|right"
            />
            <Spinner
                android:id="@+id/acticity_setting_database"
                android:layout_width="0pt"
                android:gravity="center"
                android:layout_height="match_parent"
                 android:layout_weight="2"
            />
        </LinearLayout>
        <View
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="0.5dp"
        android:background="#444"/>
             <TextView
                android:text="@string/acticity_setting_database_label_description"
                android:textSize="10dp"
                android:color="#444444"
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                 android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_height="wrap_content"/>
            <View
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="0.5dp"
        android:background="#444"/>
        <Button
            android:id="@+id/acticity_setting_connect"
            android:text="@string/acticity_setting_connect_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/acticity_setting_save"
            android:text="@string/acticity_setting_save_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/acticity_setting_changepassword"
            android:text="@string/acticity_setting_changepassword_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/acticity_setting_cancelautologin"
            android:text="@string/acticity_setting_cancelautologin_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
         <Button
            android:id="@+id/CertifieDevice"
            android:text="@string/CertifieDevice_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        </LinearLayout>
 </ScrollView>
</LinearLayout>