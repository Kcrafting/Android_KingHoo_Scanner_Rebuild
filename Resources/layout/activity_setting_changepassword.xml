<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:text="@string/acticity_setting_changepassword_account_label"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/acticity_setting_changepassword_account"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:gravity="center"
            android:textAlignment="center"
            android:text="@string/acticity_setting_changepassword_origin_password_label"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <EditText
            android:id="@+id/acticity_setting_changepassword_origin_password"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"/>

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:gravity="center"
            android:textAlignment="center"
            android:text="@string/acticity_setting_changepassword_new_password_label"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <EditText
            android:id="@+id/acticity_setting_changepassword_new_password"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:gravity="center"
            android:textAlignment="center"
            android:text="@string/acticity_setting_changepassword_repeat_password_label"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <EditText
            android:id="@+id/acticity_setting_changepassword_repeat_password"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="50dp"/>
    </LinearLayout>
    <Button
        android:id="@+id/acticity_setting_changepassword_save_change"
        android:text="@string/acticity_setting_changepassword_save_change_label"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
</LinearLayout>
