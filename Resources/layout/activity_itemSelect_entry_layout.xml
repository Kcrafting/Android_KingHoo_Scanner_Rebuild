<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="70dp">

    <TextView
        android:id="@+id/activity_itemSelect_entry_layout_fnumber"
        android:text="@string/activity_itemSelect_entry_layout_fnumber_label"
        android:textColor="#444444"
        android:gravity="center_vertical"
        android:textSize="23dp"
        android:textStyle="bold"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <LinearLayout
        android:layout_weight="2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
        android:id="@+id/activity_itemSelect_entry_layout_fname"
        android:text="@string/activity_itemSelect_entry_layout_fname_label"    
        android:textColor="#888888"
            android:gravity="center_vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
        <TextView
            android:id="@+id/activity_itemSelect_entry_layout_fmodel"
        android:text="@string/activity_itemSelect_entry_layout_fmodel_label"   
        android:textColor="#888888"
            android:gravity="center_vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>
