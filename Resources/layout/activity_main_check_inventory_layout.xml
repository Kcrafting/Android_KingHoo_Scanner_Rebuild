
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:autoLink="all"
            android:id="@+id/activity_main_check_inventory_layout_item_select"
            android:text="@string/activity_main_check_inventory_layout_item_fnumber_label"
            android:textStyle="italic|bold"
             android:layout_weight = "1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:textColor="#000080"
            android:id="@+id/activity_main_check_inventory_layout_item_scan_fnumber"
            android:text="@string/activity_main_check_inventory_layout_item_fnumber_label"
            android:layout_weight = "5"
            android:textAlignment="gravity"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:editable="false"
            android:layout_height="wrap_content"/>


    </LinearLayout>
    
        <LinearLayout
        android:id="@+id/activity_main_check_inventory_layout_sub_main"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:text="@string/activity_main_check_inventory_layout_item_fnumber_label"
                    android:layout_width="0dp"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="#000080"
                    android:layout_weight="4"
                    android:id="@+id/activity_main_check_inventory_layout_item_fnumber"
                    android:text="@string/activity_main_check_inventory_layout_item_fnumber_label"
                    android:layout_width="0dp"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content"/>
                </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                 <TextView
                    android:layout_weight="1"
                    android:text="@string/activity_main_check_inventory_layout_item_fname_label"
                    android:layout_width="0dp"
                android:gravity="center_vertical"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="#000080"
                    android:layout_weight="4"
                    android:id="@+id/activity_main_check_inventory_layout_item_fname"
                    android:text="@string/activity_main_check_inventory_layout_item_fname_label"
                    android:layout_width="0dp"
                android:gravity="center_vertical"
                    android:layout_height="wrap_content"/>
                 </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:text="@string/activity_main_check_inventory_layout_item_fmodel_label"
                    android:layout_width="0dp"
                android:gravity="center_vertical"
                    android:layout_height="wrap_content"/>
                 <TextView
                    android:textColor="#000080"
                    android:layout_weight="4"
                    android:id="@+id/activity_main_check_inventory_layout_item_fmodel"
                    android:text="@string/activity_main_check_inventory_layout_item_fmodel_label"
                    android:layout_width="0dp"
                android:gravity="center_vertical"
                    android:layout_height="wrap_content"/>
                </LinearLayout>


                        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:text="@string/activity_main_check_inventory_layout_item_inventroytotle_label"
                    android:layout_width="0dp"
                android:gravity="center_vertical"
                    android:layout_height="wrap_content"/>
                 <TextView
                    android:textColor="#000080"
                    android:layout_weight="4"
                    android:id="@+id/activity_main_check_inventory_layout_item_inventroytotle"
                    android:text="@string/activity_main_check_inventory_layout_item_inventroytotle_label"
                    android:layout_width="0dp"
                android:gravity="center_vertical"
                    android:layout_height="wrap_content"/>
                </LinearLayout>


             <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:text="@string/activity_main_check_inventory_layout_item_willinstocktotle_label"
                    android:layout_width="wrap_content"
                android:gravity="center_vertical"
                    android:layout_height="wrap_content"/>
                 <TextView
                    android:textColor="#000080"
                    android:layout_weight="4"
                    android:id="@+id/activity_main_check_inventory_layout_item_willinstocktotle"
                    android:text="@string/activity_main_check_inventory_layout_item_willinstocktotle_label"
                    android:layout_width="wrap_content"
                android:gravity="center_vertical"
                    android:layout_height="wrap_content"/>
                </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:text="@string/activity_main_check_inventory_layout_item_willoutstocktotle_label"
                    android:layout_width="wrap_content"
                android:gravity="center_vertical"
                    android:layout_height="wrap_content"/>
                 <TextView
                    android:textColor="#000080"
                    android:layout_weight="4"
                    android:id="@+id/activity_main_check_inventory_layout_item_willoutstocktotle"
                    android:text="@string/activity_main_check_inventory_layout_item_willoutstocktotle_label"
                    android:layout_width="wrap_content"
                android:gravity="center_vertical"
                    android:layout_height="wrap_content"/>
                </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:text="@string/activity_main_check_inventory_layout_item_lookpicture_label_withoutunderline"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content"/>
                 <TextView
                    android:textColor="#FF1493"
                    android:layout_weight="4"
                    android:textStyle="bold"
                    android:id="@+id/activity_main_check_inventory_layout_item_lookpicture"
                    android:text="@string/activity_main_check_inventory_layout_item_lookpicture_label_withunderline"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content"/>
                </LinearLayout>

            <View
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:background="#000000"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            </LinearLayout>
        <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/activity_main_check_inventory_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>


            </LinearLayout>

            </ScrollView>
        </LinearLayout>

</LinearLayout>