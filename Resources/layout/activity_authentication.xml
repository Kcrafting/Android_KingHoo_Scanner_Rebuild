
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
           android:textAlignment="center" 
android:layout_gravity="center"
            android:text="@string/auth_attention"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        />
    <LinearLayout
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="40dp">
    <TextView
           android:textAlignment="center" 
android:layout_gravity="center"
            android:text="@string/ProjectName_label"
          android:layout_weight="7"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="center"
        />
        <EditText
             android:layout_gravity="center_vertical"
            android:id="@+id/ProjectName"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:singleLine="false"
            android:maxLines="5"
            android:inputType="textMultiLine"
            android:scrollHorizontally="false"        
        />
        
    </LinearLayout>
        <TextView
         android:layout_marginTop="40dp"
            android:id="@+id/showAuthState"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
<Button
        android:id="@+id/authdevice"
        android:text="@string/CertifieDevice_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
<Button
        android:id="@+id/updateauthservicedate"
        android:text="@string/CertifieUpdateServiceDate_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
<Button
        android:id="@+id/updateauthusedate"
        android:text="@string/CertifieUpdateUseDate_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
</LinearLayout>