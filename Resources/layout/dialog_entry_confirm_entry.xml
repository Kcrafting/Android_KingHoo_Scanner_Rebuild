<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="3"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/dialog_entry_confirm_entry_fnumber"
                    android:layout_weight="1"
                    android:text="@string/activity_main_check_inventory_layout_item_fnumber_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/dialog_entry_confirm_entry_fname"
                    android:layout_weight="1"
                    android:text="@string/activity_main_check_inventory_layout_item_fnumber_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/dialog_entry_confirm_entry_fmodel"
                    android:layout_weight="1"
                    android:text="@string/activity_main_check_inventory_layout_item_fnumber_label"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/dialog_entry_confirm_entry_stock"
                    android:text="@string/activity_main_check_inventory_layout_stock_label"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/dialog_entry_confirm_entry_stockplace"
                    android:text="@string/activity_main_check_inventory_layout_stockplace_label"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/dialog_entry_confirm_entry_fqty"
                    android:text="@string/activity_main_check_inventory_layout_fqty_label"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/dialog_entry_confirm_entry_fbatch"
                    android:text="@string/activity_main_check_inventory_layout_batch_label"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>
        <Button
            android:layout_weight="10"
            android:text="@string/Confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
