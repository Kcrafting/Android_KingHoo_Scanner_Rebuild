
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#000000"
            android:text="@string/activity_main_check_inventory_layout_bill_or_stock_label"
            android:layout_weight="1"
          android:gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="@string/activity_main_check_inventory_layout_bill_or_stock_label"
            android:textColor="#000080"
            android:layout_weight="9"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/entry_bill_or_stock_label"
            android:textAlignment="gravity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
        <TextView
            android:textColor="#000000"
            android:text="@string/activity_main_check_inventory_layout_mianuint_label"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
                android:textColor="#000080"
                android:gravity="center"
                android:layout_weight="9"
            android:text="@string/activity_main_check_inventory_layout_mianuint_label"
            android:id="@+id/entry_mianuint_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#000000"
            android:text="@string/activity_main_check_inventory_layout_seconduint_label"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="@string/activity_main_check_inventory_layout_seconduint_label"
            android:id="@+id/entry_seconduint_label"
                android:gravity="center"
            android:layout_weight="9"
                android:textColor="#000080"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
   <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
        android:text="@string/activity_main_check_inventory_layout_stockplace_label"
                android:textColor="#000000"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
                android:textColor="#000080"
        android:text="@string/activity_main_check_inventory_layout_stockplace_label"
        android:id="@+id/entry_tockplace_label"
        android:gravity="center"
        android:layout_weight="9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
            </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
              <TextView
        android:text="@string/activity_main_check_inventory_layout_batch_label"
                android:textColor="#000000"
                
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
                android:textColor="#000080"
        android:text="@string/activity_main_check_inventory_layout_batch_label"
        android:id="@+id/entry_batch_label"
                android:gravity="center"
        android:layout_weight="9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

            </LinearLayout>
     </LinearLayout>
<View
        android:layout_margin="5dp"
        android:background="#000000"
    android:layout_width="match_parent"
    android:layout_height="1dp"/>
</LinearLayout>