<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/dialog_shape"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
                android:textStyle="italic|bold"
            android:text="@string/activity_main_check_inventory_layout_item_fnumber_label"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
                 android:editable="false"
                android:id="@+id/dialog_entry_add_fnumber"
            android:layout_width="wrap_content"
            android:layout_weight="9"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
                android:textStyle="italic|bold"
            android:text="@string/activity_main_check_inventory_layout_stock_label"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
                 android:editable="false"
                android:id="@+id/dialog_entry_add_fstock"
            android:layout_width="wrap_content"
            android:layout_weight="9"
            android:layout_height="wrap_content"/>
    </LinearLayout>
        <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
                android:textStyle="italic|bold"
            android:text="@string/activity_main_check_inventory_layout_stockplace_label"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
                android:id="@+id/dialog_entry_add_fstockplace"
                android:editable="false"
            android:layout_width="wrap_content"
            android:layout_weight="9"
            android:layout_height="wrap_content"/>
    </LinearLayout>
          <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
                android:textStyle="italic|bold"
            android:text="@string/activity_main_check_inventory_layout_batch_label"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <!--<Spinner
                 android:gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:id="@+id/dialog_entry_add_fbatchno"
                android:editable="false"
            android:layout_width="wrap_content"
            android:layout_weight="9"
            android:layout_height="wrap_content"/>-->
            <EditText
                 android:gravity="center"
                android:id="@+id/dialog_entry_add_fbatchno"
                android:editable="false"
            android:layout_width="wrap_content"
            android:layout_weight="9"
            android:layout_height="wrap_content"/>
    </LinearLayout>
            <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/activity_main_check_inventory_layout_mianuint_label"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
                android:id="@+id/dialog_entry_add_mainuint"
                android:editable="false"
            android:layout_width="wrap_content"
            android:layout_weight="9"
            android:layout_height="wrap_content"/>
    </LinearLayout>
          <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/activity_main_check_inventory_layout_fqty_label"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/dialog_entry_add_fqty"
            android:layout_width="wrap_content"
            android:layout_weight="9"
                android:inputType="numberDecimal"
            android:layout_height="wrap_content"/>
    </LinearLayout>
              <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/activity_main_instock_layout_note_label"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
                android:inputType="textMultiLine"
                android:id="@+id/dialog_entry_add_fnote"
            android:layout_width="wrap_content"
            android:layout_weight="9"
            android:layout_height="wrap_content"/>
    </LinearLayout>
                <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
                android:id="@+id/dialog_entry_add_cancel"
            android:text="@string/activity_main_instock_layout_cancel_label"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <Button
                android:id="@+id/dialog_entry_add_save"
            android:text="@string/activity_main_instock_layout_save_label"
            android:editable="false"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>


</LinearLayout>
</RelativeLayout>
