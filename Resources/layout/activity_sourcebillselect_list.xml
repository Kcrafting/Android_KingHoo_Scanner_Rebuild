<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
   
     <LinearLayout
        android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
      
            <TextView
                android:textColor="#F75000"
                android:id="@+id/sourceselect_fnumber"
                android:textSize="15dp"
                android:text="FNumber"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="#BF0060"
                 android:id="@+id/sourceselect_fname"
                android:textSize="15dp"
                android:text="FName"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="#750075"
                 android:id="@+id/sourceselect_fmodel"
                android:textSize="15dp"
                android:text="FModel"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#0000C6"
                android:id="@+id/sourceselect_fqty"
                android:textSize="15dp"
                android:text="FQty"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
             <TextView
                android:textColor="#02E0E0"
                android:id="@+id/sourceselect_fcommitqty"
                android:textSize="15dp"
                android:text="FCommitQty"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            </LinearLayout>
</LinearLayout>
